<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="25" vgap="10"
          fx:controller="network_account.LoginController"
          prefHeight="400.0" prefWidth="600.0">

    <columnConstraints>
        <ColumnConstraints percentWidth="50"  />
        <ColumnConstraints percentWidth="50" />
    </columnConstraints>

    <padding><Insets left="15" right="15"/></padding>

    <Label fx:id="Title" text="Welcome, Scroller!" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Text fx:id="Prompt" text="Please enter account information." GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <Label fx:id="UsernameLabel" text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="UsernameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="PasswordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button fx:id="LoginButton" text="Login" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

</GridPane>
