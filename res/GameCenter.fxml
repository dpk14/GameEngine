<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameCenter.GameCenterController"
            prefWidth="975.0" prefHeight="500.0"
            id="parentPane">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <stylesheets><URL value="@GameCenter.css"/></stylesheets>

    <!-- Title pane -->
    <HBox   styleClass="centerPane"
            layoutX="250" layoutY="25">
        <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
        <Text   styleClass="paneText"
                fx:id="titleText"
                text="Game Center"/>
    </HBox>

    <!-- Description Pane -->
    <Pane   styleClass="descriptionPane"
            fx:id="descriptionPane"
            layoutX="250" layoutY="85"
            prefWidth="425" prefHeight="390">
        <Button styleClass="button"
                layoutX="110" layoutY="170"
                text="Create a new game">
        </Button>
    </Pane>

    <!-- Thumbnail Pane -->
    <Pane styleClass="centerPane"
        layoutX="700" layoutY="25"
        prefWidth="250" prefHeight="450">
        <ScrollPane   styleClass="thumbPane"
                fx:id="thumbPane"
                layoutX="10" layoutY="10"
                prefWidth="230" prefHeight="430">
            <VBox   fx:id="thumbPaneContent"
                    spacing="25">
            </VBox>
        </ScrollPane>
    </Pane>

    <!-- Social Pane -->
    <Pane   styleClass="centerPane"
            fx:id="socialPane"
            layoutX="25" layoutY="25"
            prefWidth="200" prefHeight="450">
    </Pane>

</AnchorPane>
